{
  "name": "@juitnow/lib-statvfs",
  "version": "1.0.6",
  "description": "Simple native bindings for \"statvfs\"",
  "author": "Team Juit <developers@juit.com>",
  "license": "UNLICENSED",
  "main": "index.js",
  "bin": {
    "statvfs": "main.js"
  },
  "scripts": {
    "build": "npm run lint -- --cache && npm run coverage",
    "bump": "bash -c 'npm --no-git-tag-version version ${1:-patch}' --",
    "coverage": "nyc --reporter=html --reporter=text npm run test",
    "dev": "npx nodemon -i dist -e js,json,ts -x npm run build",
    "lint": "eslint --ext .js --ext .ts .",
    "lintfix": "npm run lint -- --fix",
    "recompile": "node-gyp -C native rebuild",
    "test": "mocha 'test/**/*.test.{ts,js}' || false",
    "update-node-base": "npx @juitnow/cmd-node-base --release --replace && npm run updates",
    "updates": "rm -rf node_modules package-lock.json && npx @juitnow/cmd-check-updates && npm install"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^8.4.0",
    "mockery": "^2.1.0",
    "node-addon-api": "^3.2.1",
    "node-gyp": "^8.1.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19"
  },
  "directories": {
    "test": "test"
  }
}
