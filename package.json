{
  "name": "@juitnow/lib-statvfs",
  "version": "0.1.3",
  "description": "Simple native bindings for \"statvfs\"",
  "author": "Team Juit <developers@juit.com>",
  "license": "UNLICENSED",
  "main": "index.js",
  "bin": {
    "statvfs": "main.js"
  },
  "scripts": {
    "build": "npm run lint && npm run coverage",
    "bump": "bash -c 'npm --no-git-tag-version version ${1:-patch}' --",
    "coverage": "nyc --reporter=html --reporter=text npm run test",
    "dev": "npx nodemon -x npm run build",
    "lint": "eslint --cache '**/*js'",
    "lintfix": "eslint --cache '**/*js' --fix",
    "recompile": "node-gyp -C native rebuild",
    "test": "mocha 'test/**/*.test.js' || false",
    "updates": "rm -rf package-lock.json && npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.9.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^8.1.3",
    "mockery": "^2.1.0",
    "node-addon-api": "^3.0.2",
    "node-gyp": "^7.1.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {}
}
